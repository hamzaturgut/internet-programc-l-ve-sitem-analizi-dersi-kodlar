  <script>
    function showAbout() {
        var welcomeText = document.getElementById("welcomeText");
        welcomeText.style.display = "none"; // Hoşgeldiniz yazısını gizle
        var aboutText = document.getElementById("aboutText");
        aboutText.style.display = "block"; // Hakkımızda metnini göster
        var servicesText = document.getElementById("servicesText");
        servicesText.style.display = "none"; // Hizmetler metnini gizle
        var contactText = document.getElementById("contactText");
        contactText.style.display = "none"; // İletişim metnini gizle
    }

    function showServices() {
        var welcomeText = document.getElementById("welcomeText");
        welcomeText.style.display = "none"; // Hoşgeldiniz yazısını gizle
        var aboutText = document.getElementById("aboutText");
        aboutText.style.display = "none"; // Hakkımızda metnini gizle
        var servicesText = document.getElementById("servicesText");
        servicesText.style.display = "block"; // Hizmetler metnini göster
        var contactText = document.getElementById("contactText");
        contactText.style.display = "none"; // İletişim metnini gizle
    }

    function showContact() {
        var welcomeText = document.getElementById("welcomeText");
        welcomeText.style.display = "none"; // Hoşgeldiniz yazısını gizle
        var aboutText = document.getElementById("aboutText");
        aboutText.style.display = "none"; // Hakkımızda metnini gizle
        var servicesText = document.getElementById("servicesText");
        servicesText.style.display = "none"; // Hizmetler metnini gizle
        var contactText = document.getElementById("contactText");
        contactText.style.display = "block"; // İletişim metnini göster
    }
